@model TailorManagementApp.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <h5 class="m-b-10"><i class="ti-tag"></i>Create A Customer</h5>
                    <hr />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
               
                    <form asp-action="Create" enctype="multipart/form-data">
                        <input name="IsValid" id="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Name</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Name" type="text" class="form-control">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Phone</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Phone" type="text" class="form-control">
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Address</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Address" type="text" class="form-control">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Upload File</label>
                                    <div class="col-sm-9">
                                        <input asp-for="ImageUpload" id="imageBrowes">

                                        <hr />
                                    </div>
                                </div>
                                <div class="form-group row" style="float:right">
                                    <div class="col-sm-12">
                                        <input type="submit" value="create" class="btn btn-success" />
                                        <a href="/Customers/index/" class="btn btn-info">Back To List</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div id="imgPreview" class="gallery" style="display:none; ">
                                    <img class="img-responsive" id="targetImg" width="300" height="300" />
                                    <div class="caption">
                                        <a href="#" onclick="ClearPreview()"><i class="ti-trash"></i></a>
                                        <span id="description"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
</div>
</div>
</div>
</div>