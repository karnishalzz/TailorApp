@model TailorManagementApp.Models.InventoryModel.Stock

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal amount = Model.CostPrice;
    decimal quantity = Model.InitialQuantity;
    decimal totalCost = (amount * quantity);
}
   
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                   
                    <div class="box box-primary">
                        <form id="form1"></form>


                        <div class="row">
                            <div class="col-md-4">
                                <h3>Stock Details</h3>
                                <table class="table table-condensed">
                                    <tr>
                                        <td>Stock ID:</td>
                                        <td>@Model.StockID</td>
                                    </tr>
                                    <tr>
                                        <td>Item</td>
                                        <td> @Model.Item.Name </td>
                                    </tr>
                                    <tr>
                                        <td>Purchase Date</td>
                                        <td> @Model.Purchase.Date </td>
                                    </tr>
                                    <tr>
                                        <td>Initial Quantity</td>
                                        <td> @Model.InitialQuantity </td>
                                    </tr>
                                    <tr>
                                        <td>Present Quantity</td>
                                        <td> @Model.Quantity </td>
                                    </tr>
                                    <tr>
                                        <td>Per Item Amount</td>
                                        <td> @Model.CostPrice </td>
                                    </tr>
                                    <tr>
                                        <td>Selling Price</td>
                                        <td> @Model.SellingPrice </td>
                                    </tr>
                                    <tr>
                                        <td>Total Purchase cost</td>
                                        <td> @totalCost </td>
                                    </tr>

                                </table>
                                <hr />
                                <h2>Supplier Details</h2>
                                <table class="table table-condensed">
                                    <tr>
                                        <td>Name:</td>
                                        <td>@Model.Purchase.Supplier.Name</td>
                                    </tr>
                                    <tr>
                                        <td>Contact</td>
                                        <td> @Model.Purchase.Supplier.Contact </td>
                                    </tr>
                                </table>
                            </div>

                        </div>


                        <div class="form-group row" style="float:right">
                            <div class="col-sm-12">
                                <a href="/Stocks/Index/" class="btn btn-info">Back To List</a>
                            </div>

                        </div>
                    </div>
                    </div></div></div></div>