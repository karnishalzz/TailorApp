@model TailorManagementApp.Models.SalesModule.Sales


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal amount = Model.Amount;
    decimal discount = Model.Discount;
    decimal discountPercent = (discount * 100) / amount;

    int count = 0;
}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <h5 class="m-b-10"><i class="ti-tag"></i>Sales Summery</h5>
                    <hr />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <div class="box box-primary">
                        <form id="form1"></form>
                        <div class="row">
                            <div class="col-md-4">
                               
                                <table class="table table-condensed">
                                    <tr>
                                        <td>Sale ID:</td>
                                        <td>@Model.SalesID</td>
                                    </tr>
                                    <tr>
                                        <td>Sale Date</td>
                                        <td> @Model.Date </td>
                                    </tr>
                                    <tr>
                                        <td>Amount</td>
                                        <td> @Model.Amount </td>
                                    </tr>
                                    <tr>
                                        <td>Discount % :</td>
                                        <td><span id="disPer">@discountPercent (@Model.Discount)</span> </td>
                                    </tr>
                                    <tr>
                                        <td>Vat :</td>
                                        <td> @Model.Tax </td>
                                    </tr>
                                    <tr>
                                        <td>Grand Total </td>
                                        <td>@Model.GrandTotal</td>
                                    </tr>
                                </table>

                            </div>
                            <div class="col-md-8"></div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-striped">
                                    <thead class="dataTableHead">
                                        <tr>
                                            <th>Item Name</th>
                                            <th>Stock ID</th>
                                            <th>Sale ID</th>
                                            <th>Quantity</th>
                                            <th>Rate</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>

                                    @foreach (var item in Model.SalesItems)
                                    {
                                        <tr>
                                            @{count++;}
                                            <td>@item.Stock.Item.Name </td>
                                            <td>@item.StockID</td>
                                            <td>@item.SalesDetailID</td>
                                            <td><b>@item.Quantity</b></td>
                                            <td>@item.Rate</td>
                                            <td>@item.Amount</td>
                                        </tr>
                                    }

                                </table>

                            </div>
                            <div class="form-group row" style="float:right">
                                <div class="col-sm-12">
                                    <a href="/Sales/Index/" class="btn btn-info">Back To List</a>
                                </div>

                            </div>
                        </div>
                    </div>

</div></div></div></div>

