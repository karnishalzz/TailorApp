@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center">User Role Management</h3>
<hr />

<hr />

<div class="container">

    <div class="row" style="margin-bottom:10px;">
        <div class="col-8 offset-2">
            <a asp-action="AddRole" asp-controller="UserRoleManagement" class="btn btn-primary mr-2">New Role</a>
            <a asp-action="DisplayRoles" class="btn btn-success mr-2">View Roles</a>
            <a asp-action="AddUserToRole" class="btn btn-info mr-2">Assign user to role</a>
            <a asp-action="Index" asp-controller="UserRoleManagement" class="btn btn-primary">View Assigned Users</a>
        </div>
    </div>

    <hr/>
    <div class="row">
        <div class="col-12">
            @if (Model.Count == 0)
            {
                <p>No users</p>
            }
            else
            {
                <table class="table">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>UserName</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.UserName</td>
                                <td>
                                    <a class="btn btn-success"
                                       asp-route-userId="@u.Id"
                                       asp-action="Details">View Details</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
