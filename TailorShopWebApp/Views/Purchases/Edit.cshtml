@model TailorManagementApp.Models.PurchaseModel.PurchaseDetail
@using TailorManagementApp.Models.InventoryModel;

<div class="modal fade" id="purchaseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit">
                    <input name="IsValid" id="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PurchaseDetailID" />
                    <input type="hidden" asp-for="PurchaseID" />
                    <div class="form-group row">
                        <label asp-for="Quantity" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Quantity" type="text" class="form-control">
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CostPrice" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="CostPrice" type="text" class="form-control">
                            <span asp-validation-for="CostPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="SellingPrice" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="SellingPrice" type="text" class="form-control">
                            <span asp-validation-for="SellingPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Category" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="Category" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(CategoryType))"></select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="float:right">
                        <div class="col-sm-12">
                            <input type="submit" value="Update" class="btn btn-success" data-save="modal" />
                            <button class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/NavActive.js"></script>

}