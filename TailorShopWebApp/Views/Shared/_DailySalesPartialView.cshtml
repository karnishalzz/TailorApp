@model List<TailorManagementApp.Models.SalesModule.Sales>


    <table class="table datatable table-striped" id="datatable">
        <thead>
            <tr class="dataTableHead">
                <th>
                    Date
                </th>
                <th>
                    Bill No.
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Discount
                </th>
                <th>
                    Tax
                </th>
                <th>
                    Total
                </th>

            </tr>
        </thead>
        @{decimal GrandTtl = 0;}
        @if (Model != null && Model.Count() != 0)
        {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discount)

                            @{
                                decimal percent = item.Discount / item.Amount * 100;
                            }
                            <text>(@Math.Round(percent, 2) %)</text>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tax)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GrandTotal)

                            @{GrandTtl += (decimal)item.GrandTotal;}
                        </td>

                    </tr>
                    }
         }
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><b>Grand Total : </b></td>
                        <td><strong>@GrandTtl</strong> </td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
@section scripts{ 
<script>$(document).ready(function () {
        
     $('#datatable').DataTable({
                        "paging": true,
                        "ordering": true,
                        "info": true
                    });
        var tableTools = new $.fn.dataTable.TableTools(table, {
            'aButtons': [
                {
                    'sExtends': 'xls',
                    'sButtonText': 'Save to Excel',
                    'sFileName': 'DailySales.xls'
                },
                {
                    'sExtends': 'print',
                    'bShowAll': true,
                },
                {
                    'sExtends': 'pdf',
                    'bFooter': true,
                    'bShowAll': true,
                    'sPdfMessage': 'Your custom message would go here.'
                },
                'copy'
            ],
            'sSwfPath': 'http://cdn.datatables.net/tabletools/2.2.4/swf/copy_csv_xls_pdf.swf'
        });
        $(tableTools.fnContainer()).insertBefore('#datatable_wrapper');
    });</script>
}