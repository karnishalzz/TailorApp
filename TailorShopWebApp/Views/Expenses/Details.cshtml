@model TailorManagementApp.Models.Expense

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <div>
                    <h4>Expense Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Type)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Type)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                    <h3>Purchase Details</h3>
                    <table class="table table-condensed">
                        <tr>
                            <td>Purchase ID</td>
                            <td>@Model.Purchase.PurchaseID</td>
                        </tr>
                        <tr>
                            <td>Supplier Name</td>
                            <td>@Model.Purchase.Supplier.Name</td>
                        </tr>
                        <tr>
                            <td>Date</td>
                            <td>@Model.Purchase.Date</td>
                        </tr>
                        <tr>
                            <td>Amount</td>
                            <td>@Model.Purchase.Amount</td>
                        </tr>
                        <tr>
                            <td>Discount</td>
                            <td>@Model.Purchase.Discount</td>
                        </tr>
                        <tr>
                            <td>Tax</td>
                            <td>@Model.Purchase.Tax</td>
                        </tr>
                        <tr>
                            <td>Total Cost</td>
                            <td>@Model.Purchase.GrandTotal</td>
                        </tr>
                    </table>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped">
                                <thead class="dataTableHead">
                                    <tr>
                                        <th>Item Name</th>
                                        <th>Quantity</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.Purchase.PurchaseDetails)
                                {
                                    <tr>
                                        <td>@item.Item.Name </td>
                                        <td>@item.Quantity </td>
                                        <td>@item.CostPrice </td>
                                    </tr>
                                }


                            </table>
                        </div>
                    </div>


                </div>
                <div>
                    <a class="btn btn-success" style="margin-bottom:12px;float:right;" href="../Index/">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/NavActive.js"></script>

}
