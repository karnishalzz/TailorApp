
@model TailorApp.Web.ViewModels.CategoryViewModel


@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <div id="placeHolder"></div>

                <div class="col-lg-12">
                    <b><i class="ti-tag"></i> <span>Category List</span></b>
                    <a class="btn btn-success" style="margin-bottom:12px;float:right;" data-toggle="ajax-modal" id="categoryButton" data-target="#categoryModal" data-url="@Url.Action("Create")"><i class="ti-plus"></i>Create New</a>
                </div>
                <br />
                <hr />
                <div class="dt-responsive table-responsive">
                    <table class="table table-striped table-bordered" style="width:100%" id="categoryTable">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Measurements</th>
                                <th>Description</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Categories)
                            {
                                string selectedRow = "";
                                if (item.CategoryID == (int?)ViewData["CategoryID"])
                                {
                                    selectedRow = "success";
                                }
                                <tr class="@selectedRow">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>

                                    <td>
                                        @{
                                            foreach (var i in item.Enrollments)
                                            {
                                                @Html.DisplayFor(model => i.Measurement.Name) <br />

                                            }
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        <a data-toggle="ajax-modal" id="MeasurementButton" data-target="#categoryModal" data-url="@Url.Action($"Edit/{item.CategoryID}")"><i class="ti-pencil"></i></a>|
                                        @*<a data-toggle="ajax-modal" id="delete" data-target="#categoryModal" data-url="@Url.Action($"Details/{item.CategoryID}")"><i class="ti-list"></i></a> |*@
                                        <a data-toggle="ajax-modal" id="delete" data-target="#categoryModal" data-url="@Url.Action($"Delete/{item.CategoryID}")"><i class="ti-trash"></i></a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

@section scripts{

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/js/Popup.js"></script>
    
        <script src="~/js/NavActive.js"></script>

    
    <script>

        $(document).ready(function () {
            $('#categoryTable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true
            });
        });




    </script>

}
