@model TailorApp.Web.ViewModels.IncomeViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
 
}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <h1>Income Details</h1>


                    <div class="box box-primary">
                        <form id="form1"></form>


                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-condensed">
                                    <tr>
                                        <td>Income ID:</td>
                                        <td>@Model.Income.IncomeID</td>
                                    </tr>
                                    <tr>
                                        <td>Amounnt</td>
                                        <td> @Model.Income.Price </td>
                                    </tr>
                                    <tr>
                                        <td>Description</td>
                                        <td> @Model.Income.Price </td>
                                    </tr>
                                    <tr>
                                        <td>Date</td>
                                        <td> @Model.Income.Date </td>
                                    </tr>

                                </table>
                                <hr />

                                @if (Model.Order != null)
                                {
                                    <h3>Order Details</h3>
                                    <table class="table table-condensed">
                                        <tr>
                                            <td>Order ID</td>
                                            <td>@Model.Order.OrderID</td>
                                        </tr>
                                        <tr>
                                            <td>Order Date</td>
                                            <td>@Model.Order.OrderDate</td>
                                        </tr>
                                        <tr>
                                            <td>Delivery Date</td>
                                            <td>@Model.Order.DeliverDate</td>
                                        </tr>
                                        <tr>
                                            <td>Customer Name</td>
                                            <td>@Model.Order.Customer.Name</td>
                                        </tr>
                                        <tr>
                                            <td>Contact</td>
                                            <td>@Model.Order.Customer.Phone</td>
                                        </tr>
                                    </table>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <table class="table table-striped">
                                                <thead class="dataTableHead">
                                                    <tr>

                                                        <th>Category</th>
                                                        <th>Quantity</th>
                                                        <th>Amount</th>
                                                    </tr>
                                                </thead>
                                                @foreach (var item in Model.Order.OrderDetails)
                                                {
                                                    <tr>

                                                        <td>@item.Category.Name </td>
                                                        <td>@item.Quantity </td>
                                                        <td>@item.TotalPrice </td>
                                                    </tr>
                                                }


                                            </table>
                                        </div>
                                    </div>
                                }

                                @if (Model.Sales != null)
                                {
                                    <h3>Sales Details</h3>
                                    <table class="table table-condensed">
                                        <tr>
                                            <td>Sale ID</td>
                                            <td>@Model.Sales.SalesID</td>
                                        </tr>
                                        <tr>
                                            <td>Order Date</td>
                                            <td>@Model.Sales.Date</td>
                                        </tr>
                                        <tr>
                                            <td>Amount Without tax/discount</td>
                                            <td>@Model.Sales.Amount</td>
                                        </tr>
                                        <tr>
                                            <td>discount(TK)</td>
                                            <td>@Model.Sales.Discount</td>
                                        </tr>
                                        <tr>
                                            <td>paid</td>
                                            <td>@Model.Sales.GrandTotal</td>
                                        </tr>
                                    </table>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <table class="table table-striped">
                                                <thead class="dataTableHead">
                                                    <tr>

                                                        <th>Item Name</th>
                                                        <th>Sale Quantity</th>
                                                        <th>Amount</th>
                                                    </tr>
                                                </thead>
                                                @foreach (var item in Model.Sales.SalesItems)
                                                {
                                                    <tr>

                                                        <td>@item.Stock.Item.Name </td>
                                                        <td>@item.Quantity </td>
                                                        <td>@item.Amount </td>
                                                    </tr>
                                                }


                                            </table>
                                        </div>
                                    </div>
                                }


                                @if (Model.Rent != null)
                                {
                                    <table class="table table-condensed">
                                        <tr>
                                            <td>Rent ID</td>
                                            <td>@Model.Rent.RentID</td>
                                        </tr>
                                        <tr>
                                            <td>Rent Date</td>
                                            <td>@Model.Rent.RentDate</td>
                                        </tr>
                                        <tr>
                                            <td>Return Date</td>
                                            <td>@Model.Rent.RentDate</td>
                                        </tr>
                                        <tr>
                                            <td>Amount Without tax/discount</td>
                                            <td>@Model.Rent.Amount</td>
                                        </tr>
                                        <tr>
                                            <td>Discount (TK)</td>
                                            <td>@Model.Rent.Discount</td>
                                        </tr>
                                        <tr>
                                            <td>Paid</td>
                                            <td>@Model.Rent.GrandTotal</td>
                                        </tr>
                                    </table>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <table class="table table-striped">
                                                <thead class="dataTableHead">
                                                    <tr>

                                                        <th>Item Name</th>
                                                        <th>Sale Quantity</th>
                                                        <th>Amount</th>
                                                    </tr>
                                                </thead>
                                                @foreach (var item in Model.Rent.RentDetails)
                                                {
                                                    <tr>

                                                        <td>@item.Stock.Item.Name </td>
                                                        <td>@item.Quantity </td>
                                                        <td>@item.Amount </td>
                                                    </tr>
                                                }


                                            </table>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="form-group row" style="float:right">
                        <div class="col-sm-12">
                            <a class="btn btn-success" style="margin-bottom:12px;float:right;" href="/Incomes/Index">Back to List</a>
                        </div>

                    </div>


                    </div></div></div></div>