@model IEnumerable<TailorApp.Domain.Entities.Income>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dataTables_filter {
        display: none;
    }
</style>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <div class="col-lg-12">
                    <b><i class="ti-tag"></i> <span> Income List</span></b>
                </div>
                <br />
                <hr />
                <div class="dt-responsive table-responsive">
                    <table class="table table-striped table-bordered" style="width:100%" id="incomeTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>By</th>
                                <th>Amount Recieved</th>
                                <th>Description</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                            <tr>
                                <th>ID</th>
                                <th>By</th>
                                <th>Amount Recieved</th>
                                <th>Description</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                   
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/js/Popup.js"></script>
    <script>

        $(document).ready(function () {

            jQuery('#incomeTable thead tr:eq(0) th:not(:last,:first,:nth-child(6))').each(function () {
                    var title = jQuery(this).text();
                    jQuery(this).html('<input class="form-control" type="text" placeholder="Search ' + title + '" />');
                });

            var incomeTable = $("#incomeTable").DataTable({
                'processing': true,
                'serverSide': true,
                "order": [[0, 'desc']],
                'ajax': {
                    'url': '@Url.Action("LoadIncomeList", "Incomes")',
                    'method': 'POST',
                    'contentType': 'application/json',
                    'data': function (d) {
                        return JSON.stringify(d);
                    }
                },
                "lengthMenu": [[10, 15], [10, 15]],
                "lengthChange": true,
                "searching": true,
                "scrollX": true,
                //fixedColumns: {
                //    leftColumns: 1,
                //    rightColumns: 1
                //},
                'columns': [
                   
                    {
                        data: "incomeID", name: "IncomeID"
                    },
                    { data: "name", name: "Name" },
                    { data: "price", name: "Price" },
                    { data: "description", name: "Description" },
                    { data: "date", name: "Date" },
                    {
                        data: "incomeID", name: "IncomeID", searchable: false,
                        render: function (data, type, row, meta) {
                            return '<a href="/Incomes/Details/' + row.incomeID + '">' + '<i class="ti-list"></i></a> '
                         
                        }
                    },
                ]
            });

            // Individual Column Searching In case of Some Fixed Column
            jQuery(document).on('focusout', '#incomeTable_wrapper thead input[type="text"]', function () {
                incomeTable.column(jQuery(this).parent().index() + ':visible')
                    .search(this.value)
                    .draw();
            });


            // Select List filtering

            jQuery(incomeTable.table().container()).on('change', 'thead select', function () {
                console.log(this.value);
                incomeTable.column(jQuery(this).parent().index() + ':visible')
                    .search(this.value)
                    .draw();
            });
        });
       
    </script>

}
