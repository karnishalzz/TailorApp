@model IEnumerable<TailorApp.Domain.Entities.PurchaseModel.Supplier>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <div id="placeHolder"></div>

                    <div class="col-lg-12">
                        <b><i class="ti-tag"></i> <span><b>Supplier List</b></span></b>
                        <a class="btn btn-success" style="margin-bottom:12px;float:right;" data-toggle="ajax-modal" id="supplierButton" data-target="#supplierModal" data-url="@Url.Action("Create")"><i class="ti-plus"></i>Create New</a>
                    </div>
                    <br />
                    <hr />
                    <div class="dt-responsive table-responsive">
                        <table class="table table-striped table-bordered" style="width:100%" id="supplierTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Contact)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Contact)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            <a data-toggle="ajax-modal" id="MeasurementButton" data-target="#supplierModal" data-url="@Url.Action($"Edit/{item.SupplierID}")"><i class="ti-pencil"></i></a>|
                                            @*<a asp-action="Edit" asp-route-id="@item.MeasurementID"><i class="ti-pencil"></i></a> |*@
                                            <a data-toggle="ajax-modal" id="delete" data-target="#supplierModal" data-url="@Url.Action($"Details/{item.SupplierID}")"><i class="ti-list"></i></a> |
                                            <a data-toggle="ajax-modal" id="delete" data-target="#supplierModal" data-url="@Url.Action($"Delete/{item.SupplierID}")"><i class="ti-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    </div></div></div></div>
                    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

                    @section scripts{

                        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
                        <script type="text/javascript" src="~/js/Popup.js"></script>
                        <script>

                            $(document).ready(function () {
                                $('#supplierTable').DataTable({
                                    "paging": true,
                                    "ordering": true,
                                    "info": true
                                });
                            });




                        </script>

                    }
