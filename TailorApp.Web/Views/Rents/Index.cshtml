@model IEnumerable<TailorApp.Domain.Entities.RentModel.Rent>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-block">
                    <div class="col-lg-12">
                        <b><i class="ti-tag"></i> <span><b>Rent List</b></span></b>
                        <a class="btn btn-success" style="margin-bottom:12px;float:right;" href="/RentEntries/Index"><i class="ti-plus"></i>Create New</a>
                    </div>
                    <br />
                    <hr />
                    <div class="dt-responsive table-responsive">
                        <table class="table table-striped table-bordered nowrap" id="rentsTable">
                            <thead>

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RentDate)
                                    </th>
                                    <th>

                                        @Html.DisplayNameFor(model => model.ReturnDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Amount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Discount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GrandTotal)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Customer)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AdvancePayment)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Paid)
                                    </th>
                                    <th>Status</th>
                                    <th>Returned</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RentDate)
                                    </td>
                                    @{
                                        if (item.ReturnDate.Date <= DateTime.Now && item.RentReturns.Sum(x => x.RentReturnDetails.Sum(y => y.Quantity)) != item.RentDetails.Sum(x => x.Quantity))
                                        {
                                            <td>
                                                <span style="color:red;">
                                                    @Html.DisplayFor(modelItem => item.ReturnDate)
                                                </span>
                                            </td>

                                        }
                                        else
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ReturnDate)
                                            </td>
                                        }
                                    }


                                    <td>
                                        @Html.DisplayFor(modelItem => item.Amount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Discount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GrandTotal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdvancePayment)
                                    </td>
                                    <td>
                                        @{
                                            if (item.Paid == 0)
                                            {
                                                @Html.Label("-");
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.Paid)
                                            }
                                        }
                                    </td>
                                    <td class="txtCheckBox">
                                        @{
                                            if (item.IsPaid)
                                            {
                                                <a href="/RentReturn/Returns/@item.RentID" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Paid</a>
                                            }
                                            else
                                            {
                                                <a href="/RentReturn/Returns/@item.RentID" style="padding: 3px 10px 3px 10px; background-color:red " class="badge" readonly>Due</a>
                                            }
                                        }
                                    </td>
                                    <td class="txtCheckBox">
                                        @item.RentReturns.Sum(x => x.RentReturnDetails.Sum(y => y.Quantity)) / @item.RentDetails.Sum(x => x.Quantity)

                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    </div></div></div></div>
                    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

                    @section scripts{

                        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>

                        <script>

                            $(document).ready(function () {
                                $('#rentsTable').DataTable({
                                    "paging": true,
                                    "ordering": true,
                                    "info": true
                                });
                            });


                        </script>

                    }
