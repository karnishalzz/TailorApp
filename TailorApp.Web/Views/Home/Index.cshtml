@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{
    ViewData["Title"] = "Home Page";
}
@if (signInManager.IsSignedIn(User))
{
    <main role="main">
        <div class="row">
            <!-- order-card start -->
            <div class="col-md-6 col-xl-3">
                <div class="card bg-c-blue order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Orders Received</h6>
                        <h2 class="text-right"><i class="ti-shopping-cart f-left"></i><span>@ViewBag.TotalOrders</span></h2>
                        <p class="m-b-0">Completed Orders<span class="f-right">@ViewBag.CompleteOrders</span></p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-3">
                <div class="card bg-c-green order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Total Sale</h6>
                        <h2 class="text-right"><i class="ti-tag f-left"></i><span>@ViewBag.TotalSales</span></h2>
                        <p class="m-b-0">This Month<span class="f-right">@ViewBag.MonthSale</span></p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-3">
                <div class="card bg-c-yellow order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Total Rents</h6>
                        <h2 class="text-right"><i class="ti-reload f-left"></i><span>@ViewBag.TotalRent</span></h2>
                        <p class="m-b-0">This Month<span class="f-right">@ViewBag.MonthRent</span></p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-3">
                <div class="card bg-c-pink order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Total Profit</h6>
                        <h2 class="text-right"><i class="ti-wallet f-left"></i><span>@ViewBag.Income</span></h2>
                        <p class="m-b-0">This Month<span class="f-right">@ViewBag.MonthIncome</span></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-block">
                        <div class="jumbotron">
                            <h1>Tailor Management System</h1>
                            <p>A quick preview of everything Bootstrap has to offer.</p>
                            <p><a href="#" class="btn btn-primary btn-large">Learn more »</a> <a href="#" class="btn btn-outline-primary btn-large">Learn more »</a></p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- Main jumbotron for a primary marketing message or call to action -->



    </main>

}
else
{
    <h1 class="display-4 text-center">Welcome</h1>
    <h1 class="text-center">Please login to view more...</h1>
}
