@model IEnumerable<TailorApp.Domain.Entities.PurchaseModel.Purchase>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dataTables_filter {
        display: none;
    }
</style>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <div class="col-lg-12">
                    <b><i class="ti-tag"></i> <span>Purchase List</span></b>
                </div>
                <br />
                <hr />
                <div class="dt-responsive table-responsive">
                    <table class="table table-striped table-bordered nowrap" id="purchaseTable">

                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PurchaseID)
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Amount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Discount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tax)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GrandTotal)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Supplier)
                                </th>
                                <th>Action</th>
                            </tr>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PurchaseID)
                                </th>
                                <th>
                                   Date
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Amount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Discount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tax)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GrandTotal)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Supplier)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/js/Popup.js"></script>
    <script>

        $(document).ready(function () {

            jQuery('#purchaseTable thead tr:eq(0) th:not(:last,:first,:nth-child(9))').each(function () {
                    var title = jQuery(this).text();
                    jQuery(this).html('<input class="form-control" type="text" placeholder="Search ' + title + '" />');
                });

            var purchaseTable = $("#purchaseTable").DataTable({
                'processing': true,
                'serverSide': true,
                "order": [[0, 'desc']],
                'ajax': {
                    'url': '@Url.Action("LoadPurchaseList", "Purchases")',
                    'method': 'POST',
                    'contentType': 'application/json',
                    'data': function (d) {
                        return JSON.stringify(d);
                    }
                },
                "lengthMenu": [[10, 15], [10, 15]],
                "lengthChange": true,
                "searching": true,
                "scrollX": true,
                //fixedColumns: {
                //    leftColumns: 1,
                //    rightColumns: 1
                //},
                'columns': [
                    { data: "purchaseID", name: "PurchaseID" },
                    { data: "date", name: "Date" },
                    { data: "amount", name: "Amount" },
                    { data: "discount", name: "Discount" },
                    { data: "tax", name: "tax" },
                    { data: "grandTotal", name: "GrandTotal" },
                    { data: "description", name: "Description" },
                    { data: "supplier", name: "Supplier" },
                    
                    {
                        data: "purchaseID", name: "PurchaseID", searchable: false,
                        render: function (data, type, row, meta) {
                            return '<a href="/Purchases/Details/' + row.purchaseID + '">' + '<i class="ti-list"></i></a>' 
                             

                        }
                    },
                ]
            });

            // Individual Column Searching In case of Some Fixed Column
            jQuery(document).on('focusout', '#purchaseTable_wrapper thead input[type="text"]', function () {
                purchaseTable.column(jQuery(this).parent().index() + ':visible')
                    .search(this.value)
                    .draw();
            });


            // Select List filtering

            jQuery(purchaseTable.table().container()).on('change', 'thead select', function () {
                console.log(this.value);
                purchaseTable.column(jQuery(this).parent().index() + ':visible')
                    .search(this.value)
                    .draw();
            });
        });

    </script>

}
