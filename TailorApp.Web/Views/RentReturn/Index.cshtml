@model IEnumerable<TailorApp.Domain.Entities.RentModel.RentReturn>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dataTables_filter {
        display: none;
    }
</style>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <div id="placeHolder"></div>
                <div class="col-lg-12">
                    <b><i class="ti-tag"></i> <span><b>Returned item List</b></span></b>
                </div>
                <br />
                <hr />
                <div class="dt-responsive table-responsive">
                    <table class="table table-striped table-bordered nowrap" id="rentreturnTable">

                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.RentID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Subtotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Discount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NetTotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReturnedDate)
                                </th>

                                <th>Action</th>
                            </tr>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.RentID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Subtotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Discount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NetTotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReturnedDate)
                                </th>

                                <th>Action</th>
                            </tr>
                        </thead>
                       
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/js/Popup.js"></script>
    <script src="~/js/NavActive.js"></script>
    <script>

        $(document).ready(function () {

            jQuery('#rentreturnTable thead tr:eq(0) th:not(:last,:first,:nth-child(6))').each(function () {
                    var title = jQuery(this).text();
                    jQuery(this).html('<input class="form-control" type="text" placeholder="Search ' + title + '" />');
                });

            var rentreturnTable = $("#rentreturnTable").DataTable({
                'processing': true,
                'serverSide': true,
                "order": [[0, 'desc']],
                'ajax': {
                    'url': '@Url.Action("LoadRentReturnList", "RentReturn")',
                    'method': 'POST',
                    'contentType': 'application/json',
                    'data': function (d) {
                        return JSON.stringify(d);
                    }
                },
                "lengthMenu": [[10, 15], [10, 15]],
                "lengthChange": true,
                "searching": true,
                "scrollX": true,
                //fixedColumns: {
                //    leftColumns: 1,
                //    rightColumns: 1
                //},

                'columns': [
                    { data: "rentID", name: "RentID" },
                    { data: "subtotal", name: "Subtotal" },
                    { data: "discount", name: "Discount" },
                    { data: "netTotal", name: "NetTotal" },
                    { data: "description", name: "Description" },
                    { data: "returnedDate", name: "ReturnedDate" },
                    {
                        data: "rentReturnID", name: "RentReturnID", searchable: false,
                        render: function (data, type, row, meta) {
                            return '<a href="/RentReturn/ReturnDetails/' + row.rentReturnID + '">' + '<i class="ti-list"></i></a>'

                        }
                    },
                ]
            });

            // Individual Column Searching In case of Some Fixed Column
            jQuery(document).on('focusout', '#rentreturnTable_wrapper thead input[type="text"]', function () {
                rentreturnTable.column(jQuery(this).parent().index() + ':visible')
                    .search(this.value)
                    .draw();
            });


            // Select List filtering

            jQuery(rentreturnTable.table().container()).on('change', 'thead select', function () {
                console.log(this.value);
                rentreturnTable.column(jQuery(this).parent().index() + ':visible')
                    .search(this.value)
                    .draw();
            });
        });
       
    </script>

}
